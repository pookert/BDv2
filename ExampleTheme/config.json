        {
          "id": "dnd",
          "type": "colour",
          "value": "#f04747",
          "text": "DnD Colour",
          "hint": ""
        },
        {
          "id": "stream",
          "type": "colour",
          "value": "#593695",
          "text": "Stream Colour",
          "hint": ""
        },
        {
          "id": "invis",
          "type": "colour",
          "value": "#1a36fa",
          "text": "Invisible Colour",
          "hint": "Only you can see this."
        }
      ]
    },
    {
      "category": "Chat Avatar Settings",
      "type": "drawer",
      "settings": [
        {
          "id": "size1",
          "type": "text",
          "value": "60px",
          "text": "Avatar Size",
          "hint": "This scales the rest of the chat with it."
        },
        {
          "id": "margin1",
          "type": "text",
          "value": "0px",
          "text": "Move Avatar Left/Right",
          "hint": "-10 = 10px left, 10 would be 10px right"
        },
        {
          "id": "margin2",
          "type": "text",
          "value": "0px",
          "text": "Move avatar Up/Down",
          "hint": "-10 = 10px up, 10 would be 10px down"
        },
        {
          "id": "compact",
          "type": "number",
          "value": "15",
          "text": "Chat message compact. Discord Default 20. Theme default 15.",
          "hint": "5 min, max ??"
        }
      ]
    }
