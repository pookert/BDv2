          "options": [
            {
              "id": "opt1",
              "text": "Enable",
              "value": "true"
            },
            {
              "id": "opt2",
              "text": "Disable",
              "value": "false"
            }
          ]
        }
      ]
    },
    {
      "category": "Glow Status Settings",
      "type": "drawer",
      "settings": [
        {
          "id": "sGlow",
          "type": "text",
          "value": "5px 2px",
          "text": "Glow/Border Style",
          "hint": "5px 2px = theme deafult.  0px 2px for borders. 5px 0px for glow."
        },
        {
          "id": "online",
          "type": "colour",
          "value": "#43b581",
          "text": "Online Colour",
          "hint": ""
