    "icon": "Assets/icon.svg",
    "icon_type": "image/svg+xml",
    "type": "sass"
  },
  "main": "index.scss",
  "defaultConfig": [
    {
      "category": "default",
      "settings": [
        {
          "id": "exBG",
          "type": "file",
          "text": "Main Wallpaper",
          "hint": "",
          "value": [
            "Assets/defaultBG.jpg"
          ]
        },
        {
          "id": "homeIcon",
          "type": "text",
          "value": "https://i.imgur.com/pIiNaUN.gif",
          "text": "Home Icon",
          "hint": ""
        },
        {
          "id": "brightness",
          "type": "slider",
          "value": ".5",
          "min": ".01",
          "max": "1",
          "step": ".01",
          "text": "Theme brightness",
          "hint": "Higher = Darker"
        },
        {
          "id": "round",
          "type": "text",
          "value": "50%",
          "text": "Overall icon roundness",
          "hint": "Controls roundness for both addons"
        }
      ]
    },
    {
      "category": "Addons",
      "type": "drawer",
      "settings": [
        {
          "id": "glowStatus",
          "type": "dropdown",
          "value": "opt2",
          "text": "Glow Status",
          "options": [
            {
              "id": "opt1",
              "text": "Enable",
              "value": "true"
            },
            {
              "id": "opt2",
              "text": "Disable",
              "value": "false"
            }
          ]
        },
        {
          "id": "customChatAvatars",
          "type": "dropdown",
          "value": "opt2",
